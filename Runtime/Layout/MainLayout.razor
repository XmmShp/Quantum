@inherits LayoutComponentBase
@using Quantum.Runtime.Components

<Layout Style="min-height: 100vh">
    <Layout>
        <Header Class="site-header" Style="padding: 0; height: 32px; line-height: 32px; background: #1f1f1f;">
            <TitleBar />
        </Header>
        <Header Class="nav-header" Style="padding: 0; height: 48px; line-height: 48px; background: #001529;">
            <NavMenu />
        </Header>
        <Layout>
            <Sidebar />
            <Layout Style="padding: 24px">
                <Content Style="background: #fff; padding: 24px; margin: 0; min-height: 280px; border-radius: 2px">
                    @Body
                </Content>
            </Layout>
        </Layout>
    </Layout>
</Layout>

<style>
    .site-header {
        position: sticky;
        top: 0;
        z-index: 2;
        width: 100%;
    }

    .nav-header {
        position: sticky;
        top: 32px;
        z-index: 1;
        width: 100%;
    }
</style>
