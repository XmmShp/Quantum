{
  "executable": "Quantum.Shell",
  "splashscreen": {
    "imageFile": ""
  },
  "name": "quantum",
  "author": "Quantum Team|Koala Studio",
  "singleInstance": false,
  "environment": "Production",
  "build": {
    "appId": "com.quantum.Quantum",
    "productName": "Quantum",
    "copyright": "Copyright 2024",
    "buildVersion": "1.1.0",
    "compression": "maximum",
    "directories": {
      "output": "../../../Release"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": ["**/*"]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": ["**/*"]
      },
      "**/*",
      "!data/**/*",
      "!data"
    ],
    "win": {
      "icon": "",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    }
  }
}
