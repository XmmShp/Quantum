@page "/home"
@using Quantum.Infrastructure.Abstractions
@inject NavigationManager NavigationManager
@inject IEnumerable<IModule> Modules

<PageTitle>导航 - Quantum</PageTitle>

<div class="navigation-container">
    <div class="navigation-content">
        <h1 class="welcome-text">欢迎使用 Quantum</h1>
        <div class="navigation-buttons">
            @foreach (var module in Modules)
            {
                <AntDesign.Button Type="@ButtonType.Primary"
                                  Size="@ButtonSize.Large"
                                  OnClick="@(() => NavigationManager.NavigateTo(module.DefaultRoute))">
                    <Icon Type=@module.ModuleIcon Theme="IconThemeType.Outline"/> @module.ModuleTitle
                </AntDesign.Button>
            }
        </div>
    </div>
</div>

<style>
    .navigation-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: calc(100vh - 140px);
        background: #f5f5f5;
        padding: 24px;
    }

    .navigation-content {
        background: white;
        padding: 48px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        text-align: center;
    }

    .welcome-text {
        margin-bottom: 32px;
        color: #1890ff;
    }

    .navigation-buttons {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }
</style>

